{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["dist/*"],
      "@controllers/*": ["dist/controllers/*"],
      "@controllers": ["dist/controllers"],
      "@factories/*": ["dist/factories/*"],
      "@factories": ["dist/factories"],
      "@lib/*": ["dist/lib/*"],
      "@lib": ["dist/lib"],
      "@config/*": ["config/*"],
      "@config": ["config"],
      "@routes/*": ["dist/routes/*"],
      "@routes": ["dist/routes"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "dist/*",
    "dist/bin/www.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/**"]
}
