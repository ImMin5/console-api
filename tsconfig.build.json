{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@controllers": ["src/controllers"],
      "@factories/*": ["src/factories/*"],
      "@factories": ["src/factories"],
      "@lib/*": ["src/lib/*"],
      "@lib": ["src/lib"],
      "@config/*": ["config/*"],
      "@config": ["config"],
      "@routes/*": ["src/routes/*"],
      "@routes": ["src/routes"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/*",
    "src/bin/www.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/**"]
}
