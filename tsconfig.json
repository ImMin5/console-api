{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src*"],
      "@controllers*": ["src/controllers/*", "src/controllers*"],
      "@factories*": ["src/factories/*","src/factories*", "factories/*"],
      "@lib*": ["src/lib/*","src/lib*"],
      "@test*": ["test/*", "test*"],
      "@config*": ["config/*", "config*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "src/**/*",
  ],
  "exclude": ["node_modules", "./node_modules/**", "./dist/**"]
}
